{
  "name": "@torixtv/nestjs-kafka",
  "version": "0.2.0",
  "description": "A simplified, reusable NestJS Kafka events package with retry and DLQ support",
  "author": "Torix Team",
  "private": false,
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "keywords": [
    "nestjs",
    "kafka",
    "events",
    "microservices",
    "retry",
    "dlq",
    "event-driven",
    "background-jobs",
    "typescript",
    "decorators",
    "queue",
    "async",
    "messaging",
    "observability"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/torixtv/nestjs-kafka.git"
  },
  "bugs": {
    "url": "https://github.com/torixtv/nestjs-kafka/issues"
  },
  "homepage": "https://github.com/torixtv/nestjs-kafka#readme",
  "scripts": {
    "build": "nest build",
    "build:watch": "nest build --watch",
    "dev": "nest build --watch",
    "prepublishOnly": "npm run lint && npm run build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config jest.integration.config.js",
    "test:integration": "jest --config jest.integration.config.js",
    "test:unit": "jest --testPathIgnorePatterns=integration"
  },
  "dependencies": {
    "kafkajs": "^2.2.4"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.0.0 || ^11.0.0",
    "@nestjs/core": "^10.0.0 || ^11.0.0",
    "@opentelemetry/api": "^1.0.0",
    "reflect-metadata": "^0.1.0 || ^0.2.0",
    "rxjs": "^7.0.0"
  },
  "peerDependenciesMeta": {
    "@opentelemetry/api": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
